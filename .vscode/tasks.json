{
    "version": "2.0.0",
    "tasks":
    [
       {
          "label": "Compilar Pascal",
          "linux": {
             "command": "fpc"
       },
       "args": [
          "${file}"
       ],
       "problemMatcher": {
          "owner": "external",
          "pattern": {
          "regexp": "^([\\w]+\\.(p|pp|pas))\\((\\d+)\\,(\\d+)\\)\\s(Fatal|Error|Warning|Note):(.*)",
          "file": 1,
          "line": 3,
          "column": 4,
          "message": 6
          }
       },
       "group": {
       "kind": "build",
       "isDefault": true
          }
       }
    ]
 }